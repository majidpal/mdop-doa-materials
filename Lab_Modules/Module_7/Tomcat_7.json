{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "AWS CloudFormation Sample Template to launch instance with Tomcat configured on port 8080.",
  "Mappings": {
      "RegionMap": {
        "eu-central-1": {
          "AMI": "ami-9a183671"
        },
        "eu-west-1": {
          "AMI": "ami-4c457735"
        },
        "us-east-1": {
          "AMI": "ami-d5bf2caa"
        },
        "us-west-2": {
          "AMI": "ami-5490ed2c"
        },
        "us-west-1": {
          "AMI": "ami-3b89905b"
        },
        "ap-southeast-1":{
          "AMI": "ami-da6151a6"
        },
        "ap-southeast-2": {
          "AMI": "ami-0d13c26f"
        },
        "ap-south-1": {
          "AMI": "ami-48301d27"
        }
      }
  },  
  "Parameters": {
    "VpcID": {
      "Description": "VPC Id of existing stack. See Output section of your stack.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "VPCSubnet": {
      "Description": "Public subnet Id of your stack. See Output section of your stack.",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "AvailabilityZone": {
      "Description": "The availability zone of your stack. Go to VPC -> Subnet in AWS console.",
      "Type": "String",
      "Default": "eu-west-1a"
    },
	  "KeyName": {
	   	"Description": "Key-pair name to use.",
	   	"Type": "AWS::EC2::KeyPair::KeyName"
	  }
  },
  "Resources": {
    "InstanceSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Enable SSH access and HTTP access on the configured port",
        "VpcId" : {
          "Ref": "VpcID"
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",						   		
            "FromPort": "80",
            "ToPort": "80",
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },
    "LaunchConfig": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "KeyName": {
            "Ref": "KeyName"
		},
        "ImageId": {
                    "Fn::FindInMap": [
                        "RegionMap", {
                            "Ref": "AWS::Region"
                        },
                        "AMI"
                    ]
        },
        "AssociatePublicIpAddress": true,
        "SecurityGroups": [
          {
            "Ref": "InstanceSecurityGroup"
          }
        ],
        "InstanceType": "t2.medium",
		"UserData": {
			"Fn::Base64": {
				"Fn::Join": [
					"",
					[
						"#!/bin/bash\n",
						"export IP=$(hostname --ip-address)\n",
						"yum update -y\n",
						"curl -fsSL https://get.docker.com/ | sh\n",
						"service docker start\n",
						"yum install -y unzip wget\n",
						"sed -i s/SELINUX=enforcing/SELINUX=permissive/ /etc/selinux/config\n",
						"setenforce 0\n",
						"export IP=$(hostname --ip-address)\n",
						"docker run -dt --name=tomcat7 -p 80:8080 tomcat:7.0\n"
					]
				]
			}
		}
      }
    },

    "WebServerGroup": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "AvailabilityZones" : [
            {
                "Ref": "AvailabilityZone"
            }
          ],
        "LaunchConfigurationName": {
          "Ref": "LaunchConfig"
        },
        "MinSize": "1",
        "MaxSize": "1",
        "Tags" : [ 
          {
            "Key" : "Name",
            "Value" : "Academy-Module7-Tomcat7",
            "PropagateAtLaunch" : "true"
          }
        ],
        "VPCZoneIdentifier": [
          {
            "Ref": "VPCSubnet"
          }
        ]
      }
    }
  }
}

	 